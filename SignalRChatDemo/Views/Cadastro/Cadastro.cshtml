@model ChatDemo.Data.User
@{
    ViewData["Title"] = "Cadastro de Pessoa";
}

<head>
    <link rel="stylesheet" href="~/css/Cadastro/Cadastro.css" />
</head>

<div class="form-container">
    <div class="form-header">Realizar Cadastro</div>
    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-info">
            @ViewBag.Mensagem
        </div>
    }
    <form method="post" autocomplete="off" action="/Cadastro/Register">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" name="name" value="@Model?.Name" placeholder="Digite o nome completo">
        </div>
        <div class="form-group">
            <label for="cpf">CPF</label>
            <input type="text" id="cpf" name="cpf" value="@Model?.Cpf" placeholder="Digite o CPF">
        </div>
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" value="@Model?.Password" placeholder="Digite sua senha">
        </div>
        <div class="form-group">
            <label for="confirmarSenha">Confirmar Senha</label>
            <input type="password" id="confirmarSenha" name="confirmarSenha" placeholder="Confirme sua senha">
        </div>
        <div class="form-button">
            <button type="submit">Cadastrar</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
    $('#cpf').mask('000.000.000-00');
</script>