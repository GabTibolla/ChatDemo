@model ChatDemo.Data.User
@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/Login/Login.css" />
</head>

<div class="login-container">
    <div class="login-header">Login</div>
    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-info">
            @ViewBag.Mensagem
        </div>
    }
    <form method="post" autocomplete="off" action="/Login/DoLogin">
        <div class="form-group">
            <label for="cpf">CPF</label>
            <input type="text" id="cpf" name="cpf" value="@Model?.Cpf" placeholder="Digite seu CPF">
        </div>
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" value="@Model?.Password" placeholder="Digite sua senha">
        </div>
        <div class="form-button">
            <button type="submit">Entrar</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
<script>
    $('#cpf').mask('000.000.000-00');
</script>